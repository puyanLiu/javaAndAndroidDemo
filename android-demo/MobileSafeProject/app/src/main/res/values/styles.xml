<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppNoTitle" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <!--标题样式-->
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#9f3</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="LeftTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="PreviousStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">上一步</item>
        <item name="android:onClick">btn_previous</item>
        <item name="android:background">@drawable/btn_green_selector</item>
        <item name="android:drawableLeft">@mipmap/previous</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="NextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">下一步</item>
        <item name="android:onClick">btn_next</item>
        <item name="android:background">@drawable/btn_green_selector</item>
        <item name="android:drawableRight">@mipmap/next</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>
